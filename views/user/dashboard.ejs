<%- include('../partials/header') %>

<!-- Error Popup Modal -->
<div id="errorModal" class="modal-overlay" style="display: none;">
  <div class="modal-content">
    <div class="modal-header error">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/>
        <line x1="12" y1="8" x2="12" y2="12"/>
        <line x1="12" y1="16" x2="12.01" y2="16"/>
      </svg>
      <h2>Booking Error</h2>
    </div>
    <div class="modal-body">
      <p id="errorMessage"></p>
    </div>
    <div class="modal-footer">
      <button onclick="closeErrorModal()" class="btn btn-primary">OK, Got it</button>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: white;
    border-radius: 20px;
    max-width: 420px;
    width: 90%;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    animation: modalSlideIn 0.3s ease;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .modal-header {
    padding: 32px 32px 16px;
    text-align: center;
  }

  .modal-header.error svg {
    color: #dc3545;
    margin-bottom: 16px;
  }

  .modal-header h2 {
    font-size: 22px;
    font-weight: 700;
    color: #212529;
    margin: 0;
  }

  .modal-body {
    padding: 0 32px 24px;
    text-align: center;
  }

  .modal-body p {
    color: #495057;
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
  }

  .modal-footer {
    padding: 0 32px 32px;
    display: flex;
    justify-content: center;
  }

  .modal-footer .btn {
    min-width: 140px;
    padding: 12px 24px;
  }
  .dashboard-header {
    background: linear-gradient(135deg, rgba(30, 58, 95, 0.1) 0%, rgba(52, 152, 219, 0.1) 100%);
    border: 1px solid rgba(30, 58, 95, 0.15);
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
  }

  .dashboard-header-content h1 {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 8px;
    background: linear-gradient(135deg, #1e3a5f 0%, #3498db 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .dashboard-header-content p {
    color: #495057;
    font-size: 15px;
  }

  .dashboard-stats {
    display: flex;
    gap: 24px;
  }

  .stat-box {
    text-align: center;
    padding: 16px 24px;
    background: white;
    border-radius: 12px;
    border: 1px solid rgba(30, 58, 95, 0.15);
    box-shadow: 0 4px 12px rgba(30, 58, 95, 0.08);
  }

  .stat-box .value {
    font-size: 28px;
    font-weight: 800;
    background: linear-gradient(135deg, #1e3a5f, #3498db);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-box .label {
    font-size: 12px;
    color: #868e96;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 4px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .section-title {
    font-size: 20px;
    font-weight: 700;
    color: #212529;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .section-title svg {
    color: #1e3a5f;
  }

  .trips-grid {
    display: grid;
    gap: 16px;
    max-height: 600px;
    overflow-y: auto;
    padding-right: 8px;
  }

  .trip-card {
    background: white;
    border: 1px solid #d5e8f7;
    border-radius: 16px;
    padding: 20px;
    transition: all 0.3s ease;
  }

  .trip-card:hover {
    border-color: rgba(52, 152, 219, 0.4);
    box-shadow: 0 8px 32px rgba(30, 58, 95, 0.1);
    transform: translateY(-2px);
  }

  .trip-card.disabled {
    opacity: 0.5;
    pointer-events: none;
  }

  .trip-route {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .trip-route .dot {
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, #1e3a5f, #3498db);
    border-radius: 50%;
    box-shadow: 0 0 12px rgba(52, 152, 219, 0.5);
  }

  .trip-route .route-text {
    font-size: 18px;
    font-weight: 700;
    color: #212529;
  }

  .trip-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 12px;
    margin-bottom: 16px;
  }

  .trip-detail {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #495057;
    font-size: 14px;
  }

  .trip-detail svg {
    width: 16px;
    height: 16px;
    color: #868e96;
  }

  .trip-detail.driver {
    color: #28a745;
  }

  .trip-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 16px;
    border-top: 1px solid #d5e8f7;
  }

  .trip-price {
    font-size: 24px;
    font-weight: 800;
    background: linear-gradient(135deg, #28a745, #20c997);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .trip-seats {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .seats-badge {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
  }

  .seats-badge.available {
    background: rgba(40, 167, 69, 0.15);
    color: #28a745;
    border: 1px solid rgba(40, 167, 69, 0.3);
  }

  .seats-badge.full {
    background: rgba(220, 53, 69, 0.15);
    color: #dc3545;
    border: 1px solid rgba(220, 53, 69, 0.3);
  }

  .seats-badge.no-driver {
    background: rgba(255, 193, 7, 0.15);
    color: #e67700;
    border: 1px solid rgba(255, 193, 7, 0.3);
  }

  .booking-card {
    background: white;
    border: 1px solid #d5e8f7;
    border-radius: 16px;
    padding: 20px;
    transition: all 0.3s ease;
  }

  .booking-card:hover {
    border-color: rgba(52, 152, 219, 0.4);
  }

  .booking-route {
    font-size: 16px;
    font-weight: 700;
    color: #212529;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .booking-route::before {
    content: '';
    width: 8px;
    height: 8px;
    background: #3498db;
    border-radius: 50%;
  }

  .booking-info {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 12px;
    color: #495057;
    font-size: 14px;
  }

  .booking-info span {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .empty-state {
    text-align: center;
    padding: 48px 24px;
    color: #868e96;
  }

  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .empty-state h3 {
    font-size: 18px;
    color: #495057;
    margin-bottom: 8px;
  }

  .summary-card {
    background: linear-gradient(135deg, rgba(30, 58, 95, 0.08) 0%, rgba(52, 152, 219, 0.08) 100%);
    border: 1px solid rgba(30, 58, 95, 0.15);
    border-radius: 16px;
    padding: 24px;
  }

  .summary-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .total-price {
    font-size: 32px;
    font-weight: 800;
    background: linear-gradient(135deg, #1e3a5f, #3498db);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .booking-code-display {
    background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(32, 201, 151, 0.1) 100%);
    border: 1px solid rgba(40, 167, 69, 0.25);
    border-radius: 8px;
    padding: 8px 12px;
    font-family: monospace;
    font-size: 14px;
    font-weight: 600;
    color: #28a745;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .dashboard-header {
      flex-direction: column;
      text-align: center;
    }

    .dashboard-stats {
      width: 100%;
      justify-content: center;
    }

    .trip-footer {
      flex-direction: column;
      gap: 12px;
      align-items: stretch;
    }
  }
</style>

<main class="container">
  <!-- Dashboard Header -->
  <div class="dashboard-header">
    <div class="dashboard-header-content">
      <h1>Welcome back, <%= user.name %>!</h1>
      <p>Browse available trips and manage your bookings</p>
    </div>
    <div class="dashboard-stats">
      <div class="stat-box">
        <div class="value"><%= trips.length %></div>
        <div class="label">Available</div>
      </div>
      <div class="stat-box">
        <div class="value"><%= myBookings.length %></div>
        <div class="label">My Bookings</div>
      </div>
    </div>
  </div>

  <div class="grid grid-md-2 section" style="gap: 32px; align-items: start;">
    <!-- Available Trips -->
    <div class="card">
      <div class="section-header">
        <h2 class="section-title">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          Available Trips
        </h2>
      </div>

      <div class="trips-grid">
        <% if (trips.length === 0) { %>
          <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 15h8"/>
              <path d="M9 9h.01"/>
              <path d="M15 9h.01"/>
            </svg>
            <h3>No trips available</h3>
            <p>Check back later for new trips</p>
          </div>
        <% } else { %>
          <% trips.forEach(t => { %>
            <form method="post" action="/book" class="trip-card <%= t.availableSeats <= 0 || !t.hasDriver ? 'disabled' : '' %>">
              <div class="trip-route">
                <span class="dot"></span>
                <span class="route-text"><%= t.origin %> - <%= t.destination %></span>
              </div>

              <div class="trip-details">
                <div class="trip-detail">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <%= t.date %>
                </div>
                <div class="trip-detail">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  <%= t.departure_time || '08:00' %>
                </div>
                <% if (t.driver_name) { %>
                  <div class="trip-detail driver">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                      <circle cx="12" cy="7" r="4"/>
                    </svg>
                    <%= t.driver_name %> (<%= t.vehicle_model %>)
                  </div>
                <% } %>
              </div>

              <div class="trip-footer">
                <span class="trip-price"><%= t.price %> TND</span>
                <div class="trip-seats">
                  <% if (!t.hasDriver) { %>
                    <span class="seats-badge no-driver">No Driver</span>
                  <% } else if (t.availableSeats > 0) { %>
                    <span class="seats-badge available"><%= t.availableSeats %> seats left</span>
                  <% } else { %>
                    <span class="seats-badge full">Fully Booked</span>
                  <% } %>
                  <input type="hidden" name="trip_id" value="<%= t.id %>"/>
                  <% if (t.availableSeats > 0 && t.hasDriver) { %>
                    <button class="btn btn-primary" style="padding: 10px 20px;">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 12v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h6"/>
                        <path d="M12 12L22 2"/>
                        <path d="M17 2h5v5"/>
                      </svg>
                      Book
                    </button>
                  <% } %>
                </div>
              </div>
            </form>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- My Bookings -->
    <div class="card">
      <div class="section-header">
        <h2 class="section-title">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
            <polyline points="10 9 9 9 8 9"/>
          </svg>
          My Bookings
        </h2>
      </div>

      <div class="form-grid">
        <% if (myBookings.length === 0) { %>
          <div class="empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="12" y1="18" x2="12" y2="12"/>
              <line x1="9" y1="15" x2="15" y2="15"/>
            </svg>
            <h3>No bookings yet</h3>
            <p>Book a trip to get started!</p>
          </div>
        <% } else { %>
          <% myBookings.forEach(b => { %>
            <form method="post" action="/bookings/delete" class="booking-card">
              <div class="booking-route"><%= b.origin %> - <%= b.destination %></div>
              <div class="booking-info">
                <span>
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <%= b.date %>
                </span>
                <span style="color: #28a745; font-weight: 600;"><%= b.price %> TND</span>
                <span class="booking-code-display"><%= b.booking_code %></span>
              </div>
              <div style="display: flex; justify-content: space-between; align-items: center;">
                <span style="font-size: 12px; color: #868e96;">Booked: <%= b.created_at %></span>
                <input type="hidden" name="booking_id" value="<%= b.id %>"/>
                <button class="btn btn-danger" style="padding: 8px 16px; font-size: 13px;">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="3 6 5 6 21 6"/>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                  </svg>
                  Cancel
                </button>
              </div>
            </form>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Booking Summary -->
  <% if (myBookings.length > 0) { %>
  <div class="section">
    <div class="summary-card">
      <div class="section-header">
        <h2 class="section-title">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
            <line x1="1" y1="10" x2="23" y2="10"/>
          </svg>
          Booking Summary
        </h2>
      </div>

      <div class="table-wrap" style="margin-bottom: 20px;">
        <table>
          <thead>
            <tr>
              <th>Route</th>
              <th>Date</th>
              <th>Price</th>
              <th>Booking Code</th>
              <th>Booked</th>
            </tr>
          </thead>
          <tbody>
            <% let totalPrice = 0; %>
            <% bookings.forEach(b => { %>
              <tr>
                <td style="font-weight: 600; color: #212529;"><%= b.origin %> - <%= b.destination %></td>
                <td><%= b.date %></td>
                <td style="color: #28a745; font-weight: 600;"><%= b.price %> TND</td>
                <td><span class="booking-code-display"><%= b.booking_code %></span></td>
                <td style="font-size: 13px;"><%= b.created_at %></td>
              </tr>
              <% totalPrice += b.price; %>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 16px; padding-top: 20px; border-top: 1px solid rgba(30, 58, 95, 0.15);">
        <div>
          <span style="color: #495057; font-size: 14px;">Total Amount</span>
          <div class="total-price"><%= totalPrice %> TND</div>
        </div>
        <form method="post" action="/book-with-ticket">
          <% myBookings.forEach(b => { %>
            <input type="hidden" name="trip_ids[]" value="<%= b.trip_id %>"/>
          <% }) %>
          <button class="btn btn-primary" style="padding: 14px 28px; font-size: 15px;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            Get Ticket & QR Code
          </button>
        </form>
      </div>
    </div>
  </div>
  <% } %>
</main>

<script>
  // Error modal functions
  function showErrorModal(message) {
    document.getElementById('errorMessage').textContent = message;
    document.getElementById('errorModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }

  function closeErrorModal() {
    document.getElementById('errorModal').style.display = 'none';
    document.body.style.overflow = '';
  }

  // Close modal on overlay click
  document.getElementById('errorModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeErrorModal();
    }
  });

  // Close modal on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeErrorModal();
    }
  });

  // Check for error message on page load (from URL params)
  <% if (errorMessage) { %>
    showErrorModal('<%= errorMessage %>');
  <% } %>

  // Handle booking forms with AJAX
  document.querySelectorAll('form[action="/book"]').forEach(form => {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = new FormData(this);

      try {
        const response = await fetch('/book', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'Accept': 'application/json'
          },
          body: new URLSearchParams(formData)
        });

        const data = await response.json();

        if (data.success) {
          window.location.href = '/dashboard';
        } else {
          showErrorModal(data.error);
        }
      } catch (error) {
        // Fallback to normal form submission if JSON fails
        this.submit();
      }
    });
  });
</script>
